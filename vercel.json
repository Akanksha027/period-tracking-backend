{
  "version": 2,
  "installCommand": "npm install && npx prisma generate",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "node_modules/.prisma/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/reminders",
      "schedule": "0 */3 * * *"
    }
  ]
}
